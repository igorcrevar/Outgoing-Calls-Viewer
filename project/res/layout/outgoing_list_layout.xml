<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/listName"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:text="@+id/listName">
    </TextView>
    
   	<TextView 
   	    android:layout_alignParentRight="true"
   	    android:id="@+id/listDuration"
   	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="@+id/listDuration"
   		/>
   	
   	<TextView 
   	    android:layout_below="@id/listName"
   	    android:layout_alignParentLeft="true"
   	    android:id="@+id/listPhoneNumber"
   	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="@+id/listPhoneNumber"
   		/>
   	
   	<TextView 
   	    android:layout_below="@id/listDuration"
   	    android:layout_alignParentRight="true"
   	    android:id="@+id/listDate"
   	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="@+id/listDate"
   		/>

</RelativeLayout>